@{
    ViewBag.Title = "Thêm khóa học";
    Layout = "~/Views/Shared/_LayoutAd.cshtml";
}
@section jsFooter{
    <script src="~/TemplateAdmin/js/Controller/khoahocController.js"></script>
   
}
<div class="panel box-shadow-none content-header">
    <div class="panel-body">
        <div class="col-md-12">
            <h3 class="animated fadeInLeft">Các khóa học</h3>
            <p class="animated fadeInDown">
                Admin <span class="fa-angle-right fa"></span> Các khóa học
            </p>
        </div>
    </div>
</div>
<div class="col-md-12 top-20 padding-0">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading"><h3>Các khóa học</h3></div>
            <p>
                <button class="btn btn-3d btn-success" type="button">@Html.ActionLink("Thêm mới", "AddCourse")</button>
            </p>
            <div class="panel-body">
                <div class="responsive-table">
                    <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã Khóa Học</th>
                                <th>Tên Khóa Học</th>
                                <th>Mô Tả</th>
                                <th>Học Phí</th>
                                <th>Ảnh Bìa</th>
                                <th>Trạng thái</th>
                                <th>Chức Năng</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="column1">@item.MAKHOAHOC</td>
                                    <td class="column2">@item.TENKHOAHOC</td>
                                    <td class="column3">@Html.Raw(item.MOTA)</td>
                                    <td class="column4">@item.HOCPHI</td>
                                    <td class="column5"> <img src="@Url.Content("~/images/"+item.ANHBIA)" width="120px" height="100px"></td>
                                 
                                    <td>
                                        <a href="#" class="abc" data-id="@item.MAKHOAHOC">@((bool)item.TRANGTHAI ? "Đang mở" : "Tạm đóng")</a>
                                    </td>
                                    <td width="190px">
                                        <button class="btn-3d btn-primary " style="height: 20px ; width: 56.06px">  @Html.ActionLink("Sửa", "EditCourse", new { id = item.MAKHOAHOC }) </button>|
                                        <button class="btn-3d btn-warning"> @Html.ActionLink("Chi tiết", "DetailCourse", new { id = item.MAKHOAHOC }) </button> |
                                        <button class="btn-3d btn-danger" style="height: 20px ; width: 56.06px"> @Html.ActionLink("Xóa", "DelCourse", new { id = item.MAKHOAHOC }) </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>