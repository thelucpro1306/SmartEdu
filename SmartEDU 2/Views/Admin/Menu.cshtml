
@{
    ViewBag.Title = "Thực đơn";
    Layout = "~/Views/Shared/_LayoutAd.cshtml";
}


<div class="panel box-shadow-none content-header">
    <div class="panel-body">
        <div class="col-md-12">
            <h3 class="animated fadeInLeft">Danh sách phụ huynh</h3>
            <p class="animated fadeInDown">
                Admin <span class="fa-angle-right fa"></span> Danh sách phụ huynh
            </p>
        </div>
    </div>
</div>
<div class="col-md-12 top-20 padding-0">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading"><h3>Danh Sách Món Ăn</h3></div>
            <p>
                <button class="btn btn-success" type="button">@Html.ActionLink("Thêm Món Ăn", "Register")</button>
            </p>
            <div class="panel-body">
                <div class="responsive-table">
                    <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã thực đơn</th>
                                <th>Thứ</th>
                                <th>Buổi sáng</th>
                                <th>Buổi trưa</th>
                                <th>Buổi phụ</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="column1">@item.MATHUCDON</td>
                                    <td class="column2">@item.THU</td>
                                    <td class="column3">@item.BUOISANG</td>
                                    <td class="column3">@item.BUOITRUA</td>
                                    <td class="column3">@item.BUOIPHU</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>