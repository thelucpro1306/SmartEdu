
@{
    ViewBag.Title = "ListNotification";
    Layout = "~/Views/Shared/_LayoutAd.cshtml";
}
@helper Truncate(string input, int length)
{
    if (input.Length < length)
    {
        @input
    }
    else
    {
        @input.Substring(0, length)<text>...</text>
    }
}

<div class="panel box-shadow-none content-header">
    <div class="panel-body">
        <div class="col-md-12">
            <h3 class="animated fadeInLeft">Danh sách thông báo</h3>
            <p class="animated fadeInDown">
                Admin <span class="fa-angle-right fa"></span> Danh sách thông báo
            </p>
        </div>
    </div>
</div>
<div class="col-md-12 top-20 padding-0">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading"><h3>Danh sách thông báo</h3></div>
            <p>
                <button class="btn btn-success" type="button">@Html.ActionLink("Thêm thông báo", "AddNotification")</button>
            </p>
            <div class="panel-body">
                <div class="responsive-table">
                    <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Mã thông báo</th>
                                <th>Tiêu đề</th>
                                <th>Nội dung</th>
                                <th>Ngày thông báo</th>
                                <th>Hình Ảnh</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="column1">@item.MATHONGBAO</td>
                                    <td class="column2">@Truncate(item.TIEUDE, 30)</td>
                                    <td class="column3">@Truncate(item.NOIDUNG,50)</td>
                                    <td class="column4">@item.NGAYTHONGBAO</td>
                                    <td class="column5">@item.HINHANH</td>                                    
                                    <td width="200px">
                                        <button class="btn-3d btn-primary">@Html.ActionLink("Sửa", "EditNotification", new { id = item.MATHONGBAO }) </button>|
                                        <button class="btn-3d btn-warning">@Html.ActionLink("Chi tiết", "DetailNotification", new { id = item.MATHONGBAO }) </button> |
                                        <button class="btn-3d btn-danger"> @Html.ActionLink("Xóa", "DelNotification", new { id = item.MATHONGBAO }) </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

