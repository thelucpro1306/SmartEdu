@using SmartEDU_2.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<THONGBAO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="header-breadcrumb">
    <div class="container">
        <div class="row ">
            <div class="col-xs-12">
                <ol class="breadcrumb" itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb">
                    <li class="home">
                        <a itemprop="url" href="/"><span itemprop="title">Trang chủ</span></a>
                        <span><i class="fa fa-angle-right"></i></span>
                    </li>

                    <li>Thông báo  </li>

                </ol>
            </div>
        </div>
    </div>
</div>

<section class="home-blogs">
    <div class="container">
        <div class="row">
            <div class="col-md-7" style="width:100%">
                <h2 class="default_title">
                    <a href="@Url.Action("Index","Notification")">Tin tức Quản Lý Mẫu Giáo</a>
                </h2>
                @foreach (var item in Model)
                {
                    <div class="second_div col-md-12 item no-padding-lr">
                        <div class="new-item" style="top: 30px;">
                            <div class="col-xs-4 col-sm-3 no-padding-l home-blog-content-left;">
                                <div class="new-img">
                                    <a href="@Url.Action("Detail","Notification",new { id=item.MATHONGBAO})">
                                        <img src="~/TeamplateUser/Anh-trong-web/AnhThongBao.png" />
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-8 col-sm-9 no-padding-r home-blog-content-right" style="bottom: 30px;">
                                <div class="home-blog-content-right-div">
                                    <h3 class="new-name">
                                        <a href="@Url.Action("Detail","Notification",new { id=item.MATHONGBAO})" title="Lorem Ipsum is simply dummy text of the printing and typesetting.">@item.TIEUDE</a>
                                    </h3>
                                    <p class="new-info">
                                        <span>
                                            <i class="fa fa-calendar"></i> @item.NGAYTHONGBAO
                                        </span>
                                    </p>
                                    <p class="new-description">
                                        @item.MOTA
                                        <br>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
</section>

